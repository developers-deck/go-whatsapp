# Production Environment Configuration
# Copy this file to .env and update with your production values

# Application Settings
APP_PORT=3000
APP_DEBUG=false
APP_OS=Chrome
APP_VERSION=v4.0.0
APP_PLATFORM=web
APP_BASE_PATH=
# IMPORTANT: Change these credentials for production
APP_BASIC_AUTH=admin:CHANGE_THIS_PASSWORD,user:CHANGE_THIS_PASSWORD

# Database Settings - PostgreSQL for Production
# IMPORTANT: Change the password for production
DB_URI=postgres://whatsapp_user:CHANGE_THIS_PASSWORD@postgres:5432/whatsapp_main?sslmode=disable
DB_KEYS_URI=postgres://whatsapp_user:CHANGE_THIS_PASSWORD@postgres:5432/whatsapp_keys?sslmode=disable

# Redis Cache Settings
# IMPORTANT: Change the password for production
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=CHANGE_THIS_PASSWORD

# WhatsApp Settings
WHATSAPP_AUTO_REPLY=Thank you for your message. We will get back to you soon.
WHATSAPP_AUTO_MARK_READ=false
# IMPORTANT: Set your actual webhook endpoint
WHATSAPP_WEBHOOK=https://your-domain.com/webhook/whatsapp
# IMPORTANT: Generate a secure webhook secret
WHATSAPP_WEBHOOK_SECRET=GENERATE_SECURE_WEBHOOK_SECRET
WHATSAPP_ACCOUNT_VALIDATION=true
WHATSAPP_CHAT_STORAGE=true
WHATSAPP_LOG_LEVEL=INFO
WHATSAPP_SETTING_MAX_FILE_SIZE=52428800
WHATSAPP_SETTING_MAX_VIDEO_SIZE=104857600

# Multi-Instance Settings
MULTIINSTANCE_ENABLED=true
MULTIINSTANCE_MAX_INSTANCES=50

# Analytics Settings
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=90

# Backup Settings
BACKUP_ENABLED=true
BACKUP_PROVIDER=s3
# IMPORTANT: Set your actual S3 credentials
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=us-east-1
BACKUP_S3_ACCESS_KEY=YOUR_S3_ACCESS_KEY
BACKUP_S3_SECRET_KEY=YOUR_S3_SECRET_KEY
BACKUP_SCHEDULE=daily

# Security Settings
# IMPORTANT: Generate secure keys for production
JWT_SECRET=GENERATE_SECURE_JWT_SECRET_AT_LEAST_32_CHARS
ENCRYPTION_KEY=GENERATE_SECURE_ENCRYPTION_KEY_32_CHARS

# Monitoring Settings
MONITORING_ENABLED=true
MONITORING_INTERVAL=30s

# Queue Settings
QUEUE_ENABLED=true
QUEUE_MAX_WORKERS=10
QUEUE_MAX_RETRIES=3

# SSL/TLS Settings (for production)
SSL_ENABLED=false
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/private/key.pem

# Domain Settings (for production)
DOMAIN_NAME=your-domain.com
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=/app/logs/whatsapp.log